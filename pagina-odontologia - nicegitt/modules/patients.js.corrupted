  uploadPhoto(patientId) {
    const uploadId = `upload-photo-${Date.now()}`;
    modal.create('Foto del Paciente', `
      ${fileUpload.createUploadUI({
      accept: 'image/*',
      multiple: false,
      label: 'Seleccionar Foto'
    })}
    `, [
      { text: 'Cancelar', class: 'btn-secondary' }
    ]);

    setTimeout(() => {
      const uploadElement = document.querySelector(`[data-upload-id="${uploadId}"]`).closest('.file-upload-container');
      if (uploadElement) {
        fileUpload.init(uploadElement.id, (fileData) => {
          db.updatePatientPhoto(patientId, fileData.data);
          notify.success('Foto actualizada exitosamente');
          modal.close();
          this.viewPatient(patientId); // Seamless refresh
        });
      }
    }, 100);
  }

