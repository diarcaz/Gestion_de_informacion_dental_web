        clinicalHistory: {
          allergies: data.allergies ? data.allergies.split(',').map(a => a.trim()).filter(a => a) : [],
          chronicDiseases: data.chronicDiseases ? data.chronicDiseases.split(',').map(d => d.trim()).filter(d => d) : [],
